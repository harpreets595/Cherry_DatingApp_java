<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userDetails.user_detailFragment"
    tools:showIn="@layout/activity_user_detail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="408dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/Detail_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <Button
            android:id="@+id/Detail_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Click here To hide details About me"
            app:layout_constraintBottom_toTopOf="@+id/scrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Details: Very handsome and smart computer Science student."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Detail_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: " />

                <TextView
                    android:id="@+id/textView_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:" />

                <TextView
                    android:id="@+id/textView_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age: " />

                <TextView
                    android:id="@+id/textView_birthDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Birthday: " />

                <TextView
                    android:id="@+id/textView_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender: " />

                <TextView
                    android:id="@+id/textView_astrologicalSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Astrological Sign: " />

                <TextView
                    android:id="@+id/textView_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Introduction:" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>